<div class="flex flex-col items-center gap-4">
  <div class="w-[80%] bg-white px-4 py-2 rounded-md shadow-md">
    <h3 class="text-center text-2xl">Edit Profile</h3>
    <div class="">
      <form action="/profile/{{user.id}}" method="POST" class="flex flex-col">
        <label for="fullname" class="text-lg mt-4 pb-2 font-semibold">Full Name</label>
        <input
          type="type"
          name="fullname"
          placeholder="Full Name"
          value="{{user.fullname}}"
          class="w-full p-2 bg-gray-50 border border-gray-300 rounded-md appearance-none leading-tight focus:border-[#9a99ff] outline-none"
        />
        <label for="username" class="text-lg mt-4 pb-2 font-semibold">User name</label>
        <input
          type="text"
          name="username"
          placeholder="Username"
          value="{{user.username}}"
          class="w-full p-2 bg-gray-50 border border-gray-300 rounded-md appearance-none leading-tight focus:border-[#9a99ff] outline-none"
          required
        />
        <button
          class="w-full mt-4 bg-[#9a99ff] transition-all ease-in text-white rounded-md font-semibold px-4 py-2 cursor-pointer"
          type="submit"
        >
          Update information
        </button>
      </form>
    </div>
  </div>

  <div class="w-[80%] bg-white px-3 py-2 rounded-md shadow-md">
    <h3 class="text-center text-2xl">Change Password</h3>
    <form
      action="/profile/{{user.id}}"
      method="POST"
      class="needs-validation px-3 pb-3"
    >
      <input type="hidden" name="updatePassword" value="true" />
      <div class="input-group mb-3">
        <label class="text-lg font-semibold">Current Password</label>
        <div class="flex mt-2">
        <input
          type="password"
          name="currentPassword"
          placeholder="Current password"
          class="w-full p-2 bg-gray-50 border border-gray-300 rounded-md appearance-none leading-tight focus:border-[#9a99ff] outline-none"
          id="myPass"
        />
        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-e-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          </span>
        </div>
      </div>
      <div class="input-group mb-3">
        <label class="text-lg font-semibold">New Password</label>
        <div class="flex mt-2">
          <input
            type="password"
            name="newPassword"
            placeholder="New password"
            class="w-full p-2 bg-gray-50 border border-gray-300 rounded-s-md appearance-none leading-tight focus:border-[#9a99ff] outline-none"
            id="newPass"
          />
          <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-e-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          </span>
        </div>
      </div>
      <div class="input-group mb-3">
        <label class="text-lg font-semibold">Confirm Password</label>
        <div class="flex mt-2">
          <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm password"
            class="w-full p-2 bg-gray-50 border border-gray-300 rounded-md appearance-none leading-tight focus:border-[#9a99ff] outline-none"
            id="confirmPass"
          />
        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-e-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          </span>
        </div>
      </div>
      <button
        id="updatePassBtn"
        type="submit"
        class="w-full mt-4 bg-[#9a99ff] transition-all ease-in text-white rounded-md font-semibold px-4 py-2 cursor-pointer"
      >Update password</button>
    </form>
  </div>
</div>

