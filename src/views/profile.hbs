<!--actulizar esta tarjeta con un mejor mejor diseÃ±o-->
    <div class="row mt-4">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body text-center">
               <p>Import your links</p>
                    <form action="/links/import" method="POST" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" name="mylinks" class="custom-file-input" id="inputGroupFile" onchange="updateFileNameLabel()">
                                <label class="custom-file-label" for="inputGroupFile" id="fileNameLabel">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit">Import</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateFileNameLabel() {
        const input = document.getElementById('inputGroupFile');
        const label = document.getElementById('fileNameLabel');
        label.textContent = input.files[0] ? input.files[0].name : 'Choose file';
    }
</script>